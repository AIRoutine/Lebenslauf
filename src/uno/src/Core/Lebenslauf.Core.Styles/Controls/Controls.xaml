<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:utu="using:Uno.Toolkit.UI"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <!--
    ============================================================================
    CONTROL STYLES
    ============================================================================
    Gemeinsame Styles fuer UI-Controls.
    ============================================================================
    -->

    <!-- ================================================================
         PAGE ROOT STYLES
         ================================================================ -->

    <Style x:Key="PageRootStyle" TargetType="Grid">
        <Setter Property="Background" Value="{ThemeResource BackgroundBrush}" />
    </Style>

    <!-- ================================================================
         PAGE HEADER STYLES (B&W Editorial Header)
         ================================================================ -->

    <Style x:Key="PageHeaderTitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Black" />
        <Setter Property="Foreground" Value="#FFFFFF" />
        <Setter Property="CharacterSpacing" Value="200" />
    </Style>

    <Style x:Key="PageHeaderSubtitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="#CCCCCC" />
        <Setter Property="CharacterSpacing" Value="100" />
    </Style>

    <!-- ================================================================
         STORE BADGE STYLES
         ================================================================ -->

    <Style x:Key="StoreBadgeBaseStyle" TargetType="Button" BasedOn="{StaticResource TransparentButtonStyle}">
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="MinWidth" Value="0" />
        <Setter Property="MinHeight" Value="0" />
    </Style>

    <Style x:Key="AppStoreBadgeStyle" TargetType="Button" BasedOn="{StaticResource StoreBadgeBaseStyle}">
        <Setter Property="Background" Value="#000000" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style x:Key="PlayStoreBadgeStyle" TargetType="Button" BasedOn="{StaticResource StoreBadgeBaseStyle}">
        <Setter Property="Background" Value="#FFFFFF" />
        <Setter Property="BorderBrush" Value="#000000" />
        <Setter Property="BorderThickness" Value="1.5" />
    </Style>

    <Style x:Key="HuaweiBadgeStyle" TargetType="Button" BasedOn="{StaticResource StoreBadgeBaseStyle}">
        <Setter Property="Background" Value="#000000" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>

    <Style x:Key="StoreBadgeLabelLightStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="8" />
        <Setter Property="Foreground" Value="#AAAAAA" />
    </Style>

    <Style x:Key="StoreBadgeTitleLightStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="#FFFFFF" />
    </Style>

    <Style x:Key="StoreBadgeLabelDarkStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="8" />
        <Setter Property="Foreground" Value="#666666" />
    </Style>

    <Style x:Key="StoreBadgeTitleDarkStyle" TargetType="TextBlock">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="#000000" />
    </Style>

    <!-- ================================================================
         NAVIGATION BAR STYLES
         ================================================================ -->

    <Style x:Key="DefaultNavigationBarStyle" TargetType="utu:NavigationBar" />

    <!-- ================================================================
         NAVIGATIONVIEW STYLES
         ================================================================ -->

    <Style x:Key="DefaultNavigationViewStyle" TargetType="muxc:NavigationView" />

    <!-- ================================================================
         AUTOLAYOUT STYLES
         ================================================================ -->

    <Style x:Key="CenteredContentAutoLayoutStyle" TargetType="utu:AutoLayout">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="MaxWidth" Value="800" />
    </Style>

    <Style x:Key="ContentAutoLayoutStyle" TargetType="utu:AutoLayout">
        <Setter Property="Orientation" Value="Vertical" />
    </Style>

    <Style x:Key="SectionAutoLayoutStyle" TargetType="utu:AutoLayout">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="Spacing" Value="16" />
    </Style>

    <!-- ================================================================
         TEXTBLOCK STYLES - Typography Scale
         ================================================================ -->

    <!-- Display Styles -->
    <Style x:Key="DisplayLargeTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="57" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="LineHeight" Value="64" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <Style x:Key="DisplayMediumTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="45" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="LineHeight" Value="52" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <Style x:Key="DisplaySmallTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="LineHeight" Value="44" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <!-- Headline Styles -->
    <Style x:Key="HeadlineLargeTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="LineHeight" Value="40" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <Style x:Key="HeadlineLargeCenteredTextStyle" TargetType="TextBlock"
           BasedOn="{StaticResource HeadlineLargeTextBlockStyle}">
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="HeadlineMediumTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="LineHeight" Value="36" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <Style x:Key="HeadlineSmallTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="LineHeight" Value="32" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <!-- Title Styles -->
    <Style x:Key="TitleLargeTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="LineHeight" Value="28" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <Style x:Key="TitleLargeCenteredTextStyle" TargetType="TextBlock"
           BasedOn="{StaticResource TitleLargeTextBlockStyle}">
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="TitleMediumTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="LineHeight" Value="24" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <Style x:Key="TitleSmallTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="LineHeight" Value="20" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <!-- Body Styles -->
    <Style x:Key="BodyLargeTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="LineHeight" Value="24" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style x:Key="BodyMediumTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="LineHeight" Value="20" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <Style x:Key="BodyMediumCenteredSubtleTextStyle" TargetType="TextBlock"
           BasedOn="{StaticResource BodyMediumTextBlockStyle}">
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
    </Style>

    <Style x:Key="BodySmallTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="LineHeight" Value="16" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Label Styles -->
    <Style x:Key="LabelLargeTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="LineHeight" Value="20" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <Style x:Key="LabelMediumTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="LineHeight" Value="16" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <Style x:Key="LabelSmallTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="LineHeight" Value="16" />
        <Setter Property="Foreground" Value="{ThemeResource OnBackgroundBrush}" />
    </Style>

    <!-- Subtle/Secondary TextBlock Styles -->
    <Style x:Key="SubtleTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource BodyMediumTextBlockStyle}">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
    </Style>

    <!-- ================================================================
         CV-SPECIFIC TEXTBLOCK STYLES
         ================================================================ -->

    <!-- CV Name Style - Large blue accent -->
    <Style x:Key="CvNameTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource HeadlineLargeTextBlockStyle}">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{ThemeResource AccentBrush}" />
    </Style>

    <!-- CV Subtitle Style -->
    <Style x:Key="CvSubtitleTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource TitleMediumTextBlockStyle}">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
    </Style>

    <!-- CV Contact Info Style -->
    <Style x:Key="CvContactTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource BodySmallTextBlockStyle}">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
        <Setter Property="TextWrapping" Value="NoWrap" />
    </Style>

    <!-- CV Section Header Style -->
    <Style x:Key="CvSectionHeaderTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource TitleLargeTextBlockStyle}">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <!-- CV Role/Title Style -->
    <Style x:Key="CvRoleTitleTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource TitleSmallTextBlockStyle}">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="FontSize" Value="15" />
    </Style>

    <!-- CV Date Style - Blue accent -->
    <Style x:Key="CvDateTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource BodySmallTextBlockStyle}">
        <Setter Property="Foreground" Value="{ThemeResource AccentBrush}" />
        <Setter Property="TextWrapping" Value="NoWrap" />
    </Style>

    <!-- CV Company/Institution Style -->
    <Style x:Key="CvCompanyTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource BodySmallTextBlockStyle}">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
    </Style>

    <!-- CV Description Style -->
    <Style x:Key="CvDescriptionTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource BodySmallTextBlockStyle}">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- CV Skill Name Style -->
    <Style x:Key="CvSkillNameTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource BodySmallTextBlockStyle}">
        <Setter Property="TextWrapping" Value="NoWrap" />
    </Style>

    <!-- CV Skill Percentage Style -->
    <Style x:Key="CvSkillPercentageTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource BodySmallTextBlockStyle}">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{ThemeResource AccentBrush}" />
        <Setter Property="TextWrapping" Value="NoWrap" />
    </Style>

    <!-- CV Chip/Tag Text Style -->
    <Style x:Key="CvChipTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource LabelSmallTextBlockStyle}">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
    </Style>

    <!-- CV Project Name Style -->
    <Style x:Key="CvProjectNameTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource BodySmallTextBlockStyle}">
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!-- CV Project Description Style -->
    <Style x:Key="CvProjectDescriptionTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource LabelSmallTextBlockStyle}">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="MaxLines" Value="1" />
    </Style>

    <!-- CV Institution/Degree - Accent color -->
    <Style x:Key="CvInstitutionAccentTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource BodySmallTextBlockStyle}">
        <Setter Property="Foreground" Value="{ThemeResource AccentBrush}" />
    </Style>

    <!-- CV Year Text Style -->
    <Style x:Key="CvYearTextBlockStyle" TargetType="TextBlock"
           BasedOn="{StaticResource LabelSmallTextBlockStyle}">
        <Setter Property="Foreground" Value="{ThemeResource OnSurfaceVariantBrush}" />
        <Setter Property="Opacity" Value="0.7" />
    </Style>

    <!-- ================================================================
         BUTTON STYLES
         ================================================================ -->

    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="{ThemeResource AccentBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <Style x:Key="PrimaryButtonCenteredStyle" TargetType="Button"
           BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <Style x:Key="TextButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Foreground" Value="{ThemeResource AccentBrush}" />
    </Style>

    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="MinWidth" Value="0" />
        <Setter Property="MinHeight" Value="0" />
    </Style>

    <Style x:Key="TransparentButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="MinWidth" Value="0" />
        <Setter Property="MinHeight" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
    </Style>

    <!-- ================================================================
         CARD STYLES (for Border)
         ================================================================ -->

    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <Style x:Key="ElevatedCardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBrush}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
    </Style>

    <!-- ================================================================
         UNO TOOLKIT CARD STYLES
         ================================================================ -->

    <Style x:Key="FilledCardStyle" TargetType="utu:Card">
        <Setter Property="Background" Value="{ThemeResource CardBrush}" />
    </Style>

    <Style x:Key="ElevatedCardStyle" TargetType="utu:Card">
        <Setter Property="Background" Value="{ThemeResource CardBrush}" />
    </Style>

    <!-- ================================================================
         ITEMSREPEATER STYLES
         ================================================================ -->

    <Style x:Key="DefaultItemsRepeaterStyle" TargetType="ItemsRepeater" />

    <!-- ================================================================
         SCROLLVIEWER STYLES
         ================================================================ -->

    <Style x:Key="DefaultScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
    </Style>

</ResourceDictionary>
