<UserControl x:Class="Lebenslauf.Core.Styles.Controls.ExportHeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utu="using:Uno.Toolkit.UI">

    <!-- Minimal floating export button - stays outside PDF export area -->
    <Button x:Name="ExportButton"
            Click="OnExportClick"
            Background="#000000"
            BorderThickness="0"
            Padding="16,10"
            CornerRadius="0"
            HorizontalAlignment="Right">
        <StackPanel Orientation="Horizontal" Spacing="10">
            <FontIcon Glyph="&#xE78C;" FontSize="14" Foreground="#FFFFFF" />
            <TextBlock Text="PDF"
                       Foreground="#FFFFFF"
                       FontSize="11"
                       FontWeight="Bold"
                       CharacterSpacing="80"
                       VerticalAlignment="Center" />
        </StackPanel>
    </Button>
</UserControl>
