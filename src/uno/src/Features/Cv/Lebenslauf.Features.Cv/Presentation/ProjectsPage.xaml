<Page x:Class="Lebenslauf.Features.Cv.Presentation.ProjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:uf="using:UnoFramework.Controls"
      xmlns:local="using:Lebenslauf.Features.Cv.Presentation"
      xmlns:models="using:Lebenslauf.Features.Cv.Contracts.Models"
      xmlns:controls="using:Lebenslauf.Core.Styles.Controls"
      x:Name="RootPage"
      Background="#FFFFFF">

    <Page.Resources>
        <!-- Page Header Styles -->
        <Style x:Key="PageTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource HeadlineLargeTextBlockStyle}">
            <Setter Property="FontWeight" Value="Black" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="CharacterSpacing" Value="100" />
        </Style>

        <Style x:Key="PageSubtitleStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyMediumTextBlockStyle}">
            <Setter Property="Foreground" Value="#888888" />
        </Style>

        <!-- Project Header Styles -->
        <Style x:Key="ProjectHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource HeadlineMediumTextBlockStyle}">
            <Setter Property="FontWeight" Value="Black" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="CharacterSpacing" Value="50" />
        </Style>

        <Style x:Key="ProjectFrameworkStyle" TargetType="TextBlock" BasedOn="{StaticResource LabelMediumTextBlockStyle}">
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="#888888" />
            <Setter Property="CharacterSpacing" Value="100" />
        </Style>

        <Style x:Key="ProjectSectionTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource LabelSmallTextBlockStyle}">
            <Setter Property="FontWeight" Value="Black" />
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="CharacterSpacing" Value="150" />
        </Style>

        <Style x:Key="ProjectItemTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodySmallTextBlockStyle}">
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="ProjectTechTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodySmallTextBlockStyle}">
            <Setter Property="Foreground" Value="#666666" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="ProjectBulletStyle" TargetType="TextBlock" BasedOn="{StaticResource BodySmallTextBlockStyle}">
            <Setter Property="FontWeight" Value="Black" />
            <Setter Property="Foreground" Value="#000000" />
        </Style>

        <!-- Store Badge Styles -->
        <Style x:Key="AppStoreBadgeStyle" TargetType="Button" BasedOn="{StaticResource TransparentButtonStyle}">
            <Setter Property="Background" Value="#000000" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="MinWidth" Value="0" />
            <Setter Property="MinHeight" Value="0" />
        </Style>

        <Style x:Key="PlayStoreBadgeStyle" TargetType="Button" BasedOn="{StaticResource TransparentButtonStyle}">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#000000" />
            <Setter Property="BorderThickness" Value="1.5" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="MinWidth" Value="0" />
            <Setter Property="MinHeight" Value="0" />
        </Style>

        <Style x:Key="StoreBadgeLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource LabelSmallTextBlockStyle}">
            <Setter Property="Foreground" Value="#AAAAAA" />
            <Setter Property="FontSize" Value="8" />
        </Style>

        <Style x:Key="StoreBadgeTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource BodySmallTextBlockStyle}">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#FFFFFF" />
        </Style>

        <Style x:Key="StoreBadgeLabelDarkStyle" TargetType="TextBlock" BasedOn="{StaticResource LabelSmallTextBlockStyle}">
            <Setter Property="Foreground" Value="#666666" />
            <Setter Property="FontSize" Value="8" />
        </Style>

        <Style x:Key="StoreBadgeTitleDarkStyle" TargetType="TextBlock" BasedOn="{StaticResource BodySmallTextBlockStyle}">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#000000" />
        </Style>

        <Style x:Key="ProjectResponsiveViewStyle" TargetType="utu:ResponsiveView" />
    </Page.Resources>

    <uf:BusyOverlay IsBusy="{Binding IsBusy}" BusyMessage="{Binding BusyMessage}">
        <Grid Background="#FFFFFF">
            <!-- Export Area: Masthead + Content -->
            <Grid x:Name="ProjectsExportArea" Background="#FFFFFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Simple Header - PROJEKTE -->
            <Border Background="#000000" Padding="{utu:Responsive Narrow='24,24', Normal='48,32'}">
                <StackPanel Spacing="4">
                    <TextBlock Text="PROJEKTE"
                               Style="{StaticResource PageTitleStyle}"
                               FontSize="{utu:Responsive Narrow=28, Normal=36}" />
                    <TextBlock Text="Referenzprojekte und Erfahrungen"
                               Style="{StaticResource PageSubtitleStyle}"
                               FontSize="{utu:Responsive Narrow=13, Normal=15}" />
                </StackPanel>
            </Border>

            <!-- Content with ResponsiveView -->
            <utu:ResponsiveView x:Name="ProjectsContent" Grid.Row="1" Style="{StaticResource ProjectResponsiveViewStyle}">
                <utu:ResponsiveView.ResponsiveLayout>
                    <utu:ResponsiveLayout Narrow="0" Normal="640" Wide="900" />
                </utu:ResponsiveView.ResponsiveLayout>

                <!-- Mobile Layout (Narrow) -->
                <utu:ResponsiveView.NarrowTemplate>
                    <DataTemplate>
                        <ScrollViewer Background="#FFFFFF" Padding="16,20">
                        <ItemsRepeater ItemsSource="{Binding Projects}">
                            <ItemsRepeater.Layout>
                                <StackLayout Spacing="0" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="models:ProjectModel">
                                    <Border Background="#FAFAFA"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            Margin="0,0,0,24">

                                        <StackPanel>
                                            <!-- Project Header -->
                                            <Border Background="#000000" Padding="16,14">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}"
                                                               Style="{StaticResource ProjectHeaderStyle}"
                                                               FontSize="18" />
                                                    <TextBlock Text="{Binding Framework}"
                                                               Style="{StaticResource ProjectFrameworkStyle}"
                                                               FontSize="10"
                                                               Margin="0,4,0,0" />
                                                </StackPanel>
                                            </Border>

                                            <!-- Content - Stacked for Mobile -->
                                            <StackPanel Padding="16" Spacing="16">

                                                <!-- Functions Section -->
                                                <StackPanel Spacing="10">
                                                    <Border BorderBrush="#000000"
                                                            BorderThickness="0,0,0,2"
                                                            Padding="0,0,0,6">
                                                        <TextBlock Text="FUNKTIONEN"
                                                                   Style="{StaticResource ProjectSectionTitleStyle}" />
                                                    </Border>

                                                    <ItemsRepeater ItemsSource="{Binding Functions}">
                                                        <ItemsRepeater.Layout>
                                                            <StackLayout Spacing="6" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid ColumnSpacing="10">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Width="6" Height="6"
                                                                            Background="#000000"
                                                                            VerticalAlignment="Top"
                                                                            Margin="0,6,0,0" />
                                                                    <TextBlock Grid.Column="1"
                                                                               Text="{Binding}"
                                                                               Style="{StaticResource ProjectItemTextStyle}" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>
                                                </StackPanel>

                                                <!-- Divider -->
                                                <Border Height="1" Background="#E5E5E5" />

                                                <!-- Technical Aspects Section -->
                                                <StackPanel Spacing="10">
                                                    <Border BorderBrush="#000000"
                                                            BorderThickness="0,0,0,2"
                                                            Padding="0,0,0,6">
                                                        <TextBlock Text="TECHNISCHE ASPEKTE"
                                                                   Style="{StaticResource ProjectSectionTitleStyle}" />
                                                    </Border>

                                                    <ItemsRepeater ItemsSource="{Binding TechnicalAspects}">
                                                        <ItemsRepeater.Layout>
                                                            <StackLayout Spacing="6" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid ColumnSpacing="10">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Text="+"
                                                                               Style="{StaticResource ProjectBulletStyle}"
                                                                               VerticalAlignment="Top" />
                                                                    <TextBlock Grid.Column="1"
                                                                               Text="{Binding}"
                                                                               Style="{StaticResource ProjectTechTextStyle}" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>
                                                </StackPanel>

                                                <!-- Divider -->
                                                <Border Height="1" Background="#E5E5E5" />

                                                <!-- Store Badges Section -->
                                                <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Left">
                                                    <!-- App Store Badge -->
                                                    <Button Style="{StaticResource AppStoreBadgeStyle}"
                                                            Visibility="{Binding AppStoreUrl, Converter={StaticResource NullToCollapsedConverter}}"
                                                            Command="{Binding DataContext.OpenUrlCommand, ElementName=RootPage}"
                                                            CommandParameter="{Binding AppStoreUrl}">
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <FontIcon Glyph="&#xE8A9;" FontSize="18" Foreground="#FFFFFF" />
                                                            <StackPanel Spacing="-2">
                                                                <TextBlock Text="Laden im"
                                                                           Style="{StaticResource StoreBadgeLabelStyle}" />
                                                                <TextBlock Text="App Store"
                                                                           Style="{StaticResource StoreBadgeTitleStyle}" />
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Button>

                                                    <!-- Google Play Badge -->
                                                    <Button Style="{StaticResource PlayStoreBadgeStyle}"
                                                            Visibility="{Binding PlayStoreUrl, Converter={StaticResource NullToCollapsedConverter}}"
                                                            Command="{Binding DataContext.OpenUrlCommand, ElementName=RootPage}"
                                                            CommandParameter="{Binding PlayStoreUrl}">
                                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                                            <FontIcon Glyph="&#xE768;" FontSize="18" Foreground="#000000" />
                                                            <StackPanel Spacing="-2">
                                                                <TextBlock Text="Jetzt bei"
                                                                           Style="{StaticResource StoreBadgeLabelDarkStyle}" />
                                                                <TextBlock Text="Google Play"
                                                                           Style="{StaticResource StoreBadgeTitleDarkStyle}" />
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                        </ScrollViewer>
                    </DataTemplate>
                </utu:ResponsiveView.NarrowTemplate>

                <!-- Desktop Layout (Normal/Wide) -->
                <utu:ResponsiveView.NormalTemplate>
                    <DataTemplate>
                        <ScrollViewer Background="#FFFFFF" Padding="24,28">
                        <ItemsRepeater ItemsSource="{Binding Projects}">
                            <ItemsRepeater.Layout>
                                <StackLayout Spacing="0" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="models:ProjectModel">
                                    <Border Background="#FAFAFA"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            MaxWidth="900"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,32">

                                        <StackPanel>
                                            <!-- Project Header -->
                                            <Border Background="#000000" Padding="24,18">
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}"
                                                               Style="{StaticResource ProjectHeaderStyle}"
                                                               FontSize="26" />
                                                    <TextBlock Text="{Binding Framework}"
                                                               Style="{StaticResource ProjectFrameworkStyle}"
                                                               FontSize="12"
                                                               Margin="0,6,0,0" />
                                                </StackPanel>
                                            </Border>

                                            <!-- Two Column Layout for Desktop -->
                                            <Grid Padding="24,20">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="24" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Functions Column -->
                                                <StackPanel Spacing="12">
                                                    <Border BorderBrush="#000000"
                                                            BorderThickness="0,0,0,2"
                                                            Padding="0,0,0,8">
                                                        <TextBlock Text="FUNKTIONEN"
                                                                   Style="{StaticResource ProjectSectionTitleStyle}" />
                                                    </Border>

                                                    <ItemsRepeater ItemsSource="{Binding Functions}">
                                                        <ItemsRepeater.Layout>
                                                            <StackLayout Spacing="8" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid ColumnSpacing="12">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Width="6" Height="6"
                                                                            Background="#000000"
                                                                            VerticalAlignment="Top"
                                                                            Margin="0,7,0,0" />
                                                                    <TextBlock Grid.Column="1"
                                                                               Text="{Binding}"
                                                                               Style="{StaticResource ProjectItemTextStyle}"
                                                                               FontSize="14" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>
                                                </StackPanel>

                                                <!-- Vertical Divider -->
                                                <Border Grid.Column="1"
                                                        Width="1"
                                                        Background="#E5E5E5"
                                                        HorizontalAlignment="Center" />

                                                <!-- Technical Aspects Column -->
                                                <StackPanel Grid.Column="2" Spacing="12">
                                                    <Border BorderBrush="#000000"
                                                            BorderThickness="0,0,0,2"
                                                            Padding="0,0,0,8">
                                                        <TextBlock Text="TECHNISCHE ASPEKTE"
                                                                   Style="{StaticResource ProjectSectionTitleStyle}" />
                                                    </Border>

                                                    <ItemsRepeater ItemsSource="{Binding TechnicalAspects}">
                                                        <ItemsRepeater.Layout>
                                                            <StackLayout Spacing="8" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid ColumnSpacing="12">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Text="+"
                                                                               Style="{StaticResource ProjectBulletStyle}"
                                                                               FontSize="14"
                                                                               VerticalAlignment="Top" />
                                                                    <TextBlock Grid.Column="1"
                                                                               Text="{Binding}"
                                                                               Style="{StaticResource ProjectTechTextStyle}"
                                                                               FontSize="14" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Store Badges Section -->
                                            <Border Background="#F5F5F5" Padding="24,16">
                                                <StackPanel Orientation="Horizontal" Spacing="12">
                                                    <!-- App Store Badge -->
                                                    <Button Style="{StaticResource AppStoreBadgeStyle}"
                                                            Visibility="{Binding AppStoreUrl, Converter={StaticResource NullToCollapsedConverter}}"
                                                            Command="{Binding DataContext.OpenUrlCommand, ElementName=RootPage}"
                                                            CommandParameter="{Binding AppStoreUrl}">
                                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                                            <FontIcon Glyph="&#xE8A9;" FontSize="22" Foreground="#FFFFFF" />
                                                            <StackPanel Spacing="-1">
                                                                <TextBlock Text="Laden im"
                                                                           Style="{StaticResource StoreBadgeLabelStyle}" />
                                                                <TextBlock Text="App Store"
                                                                           Style="{StaticResource StoreBadgeTitleStyle}"
                                                                           FontSize="14" />
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Button>

                                                    <!-- Google Play Badge -->
                                                    <Button Style="{StaticResource PlayStoreBadgeStyle}"
                                                            Visibility="{Binding PlayStoreUrl, Converter={StaticResource NullToCollapsedConverter}}"
                                                            Command="{Binding DataContext.OpenUrlCommand, ElementName=RootPage}"
                                                            CommandParameter="{Binding PlayStoreUrl}">
                                                        <StackPanel Orientation="Horizontal" Spacing="10">
                                                            <FontIcon Glyph="&#xE768;" FontSize="22" Foreground="#000000" />
                                                            <StackPanel Spacing="-1">
                                                                <TextBlock Text="Jetzt bei"
                                                                           Style="{StaticResource StoreBadgeLabelDarkStyle}" />
                                                                <TextBlock Text="Google Play"
                                                                           Style="{StaticResource StoreBadgeTitleDarkStyle}"
                                                                           FontSize="14" />
                                                            </StackPanel>
                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                        </ScrollViewer>
                    </DataTemplate>
                </utu:ResponsiveView.NormalTemplate>
            </utu:ResponsiveView>
        </Grid>

            <!-- Floating PDF Export Button (rendered on top) -->
            <controls:ExportHeaderControl ExportTarget="{x:Bind ProjectsExportArea}"
                                           FileName="Projekte_Daniel_Hufnagl"
                                           Margin="0,16,48,0"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Top" />
        </Grid>
    </uf:BusyOverlay>
</Page>
