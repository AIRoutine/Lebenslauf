<Page x:Class="Lebenslauf.Features.Cv.Presentation.ProjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:local="using:Lebenslauf.Features.Cv.Presentation"
      xmlns:controls="using:Lebenslauf.Core.Styles.Controls"
      Background="#FFFFFF">

    <Page.Resources>
        <!-- Black & White Project Styles -->
        <Style x:Key="ProjectHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource HeadlineMediumTextBlockStyle}">
            <Setter Property="FontWeight" Value="Black" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="CharacterSpacing" Value="50" />
        </Style>

        <Style x:Key="ProjectFrameworkStyle" TargetType="TextBlock" BasedOn="{StaticResource LabelMediumTextBlockStyle}">
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="#AAAAAA" />
            <Setter Property="CharacterSpacing" Value="100" />
        </Style>

        <Style x:Key="ProjectSectionTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource LabelSmallTextBlockStyle}">
            <Setter Property="FontWeight" Value="Black" />
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="CharacterSpacing" Value="150" />
        </Style>

        <Style x:Key="ProjectItemTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodySmallTextBlockStyle}">
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="ProjectTechTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodySmallTextBlockStyle}">
            <Setter Property="Foreground" Value="#666666" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>

        <Style x:Key="ProjectBulletStyle" TargetType="TextBlock" BasedOn="{StaticResource BodySmallTextBlockStyle}">
            <Setter Property="FontWeight" Value="Black" />
            <Setter Property="Foreground" Value="#000000" />
        </Style>

        <Style x:Key="ProjectPageTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleLargeTextBlockStyle}">
            <Setter Property="FontWeight" Value="Black" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="CharacterSpacing" Value="100" />
        </Style>

        <Style x:Key="ProjectBackButtonStyle" TargetType="Button" BasedOn="{StaticResource TransparentButtonStyle}">
            <Setter Property="Padding" Value="8" />
        </Style>

        <Style x:Key="ProjectResponsiveViewStyle" TargetType="utu:ResponsiveView" />
    </Page.Resources>

    <Grid Background="#FFFFFF">
        <!-- Export Area: Masthead + Content -->
        <Grid x:Name="ProjectsExportArea" Background="#FFFFFF">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Editorial Masthead - Bold B&W Header -->
            <Border Background="#000000">
                <Grid Padding="{utu:Responsive Narrow='24,20', Normal='48,28'}">
                    <StackPanel>
                        <TextBlock Text="PROJEKTE"
                                   Style="{StaticResource DisplayLargeTextBlockStyle}"
                                   FontSize="{utu:Responsive Narrow=32, Normal=42}"
                                   FontWeight="Black"
                                   Foreground="#FFFFFF"
                                   CharacterSpacing="200" />
                        <TextBlock Text="Referenzprojekte und Erfahrungen"
                                   Style="{StaticResource LabelSmallTextBlockStyle}"
                                   FontSize="{utu:Responsive Narrow=11, Normal=12}"
                                   FontWeight="Normal"
                                   Foreground="#CCCCCC"
                                   CharacterSpacing="100"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content with ResponsiveView -->
            <utu:ResponsiveView x:Name="ProjectsContent" Grid.Row="1" Style="{StaticResource ProjectResponsiveViewStyle}">
                <utu:ResponsiveView.ResponsiveLayout>
                    <utu:ResponsiveLayout Narrow="0" Normal="640" Wide="900" />
                </utu:ResponsiveView.ResponsiveLayout>

                <!-- Mobile Layout (Narrow) -->
                <utu:ResponsiveView.NarrowTemplate>
                    <DataTemplate>
                        <ScrollViewer Background="#FFFFFF" Padding="16,16">
                        <ItemsRepeater ItemsSource="{Binding Projects}">
                            <ItemsRepeater.Layout>
                                <StackLayout Spacing="0" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="local:ProjectDetailModel">
                                    <Border Background="#FFFFFF"
                                            BorderBrush="#000000"
                                            BorderThickness="2"
                                            Margin="0,0,0,24">

                                        <StackPanel>
                                            <!-- Project Header -->
                                            <Border Background="#000000"
                                                    Padding="16,12">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}"
                                                                   Style="{StaticResource ProjectHeaderStyle}"
                                                                   FontSize="20" />
                                                        <TextBlock Text="{Binding Framework}"
                                                                   Style="{StaticResource ProjectFrameworkStyle}"
                                                                   FontSize="11"
                                                                   Margin="0,4,0,0" />
                                                    </StackPanel>

                                                    <!-- Store Links -->
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                                                        <Button Style="{StaticResource IconButtonStyle}"
                                                                Background="Transparent"
                                                                Visibility="{Binding AppStoreUrl, Converter={StaticResource NullToCollapsedConverter}}"
                                                                CommandParameter="{Binding AppStoreUrl}">
                                                            <FontIcon Glyph="&#xE8A1;" FontSize="16" Foreground="#FFFFFF" />
                                                        </Button>
                                                        <Button Style="{StaticResource IconButtonStyle}"
                                                                Background="Transparent"
                                                                Visibility="{Binding PlayStoreUrl, Converter={StaticResource NullToCollapsedConverter}}"
                                                                CommandParameter="{Binding PlayStoreUrl}">
                                                            <FontIcon Glyph="&#xE7FC;" FontSize="16" Foreground="#FFFFFF" />
                                                        </Button>
                                                        <Button Style="{StaticResource IconButtonStyle}"
                                                                Background="Transparent"
                                                                Visibility="{Binding WebsiteUrl, Converter={StaticResource NullToCollapsedConverter}}"
                                                                CommandParameter="{Binding WebsiteUrl}">
                                                            <FontIcon Glyph="&#xE774;" FontSize="16" Foreground="#FFFFFF" />
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>

                                            <!-- Content - Stacked for Mobile -->
                                            <StackPanel Padding="16" Spacing="20">

                                                <!-- Functions Section -->
                                                <StackPanel Spacing="10">
                                                    <Border BorderBrush="#000000"
                                                            BorderThickness="0,0,0,2"
                                                            Padding="0,0,0,6">
                                                        <TextBlock Text="FUNKTIONEN"
                                                                   Style="{StaticResource ProjectSectionTitleStyle}" />
                                                    </Border>

                                                    <ItemsRepeater ItemsSource="{Binding Functions}">
                                                        <ItemsRepeater.Layout>
                                                            <StackLayout Spacing="6" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid ColumnSpacing="10">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Width="6" Height="6"
                                                                            Background="#000000"
                                                                            VerticalAlignment="Top"
                                                                            Margin="0,6,0,0" />
                                                                    <TextBlock Grid.Column="1"
                                                                               Text="{Binding}"
                                                                               Style="{StaticResource ProjectItemTextStyle}" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>
                                                </StackPanel>

                                                <!-- Divider -->
                                                <Border Height="1" Background="#E5E5E5" />

                                                <!-- Technical Aspects Section -->
                                                <StackPanel Spacing="10">
                                                    <Border BorderBrush="#000000"
                                                            BorderThickness="0,0,0,2"
                                                            Padding="0,0,0,6">
                                                        <TextBlock Text="TECHNISCHE ASPEKTE"
                                                                   Style="{StaticResource ProjectSectionTitleStyle}" />
                                                    </Border>

                                                    <ItemsRepeater ItemsSource="{Binding TechnicalAspects}">
                                                        <ItemsRepeater.Layout>
                                                            <StackLayout Spacing="6" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid ColumnSpacing="10">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Text="+"
                                                                               Style="{StaticResource ProjectBulletStyle}"
                                                                               VerticalAlignment="Top" />
                                                                    <TextBlock Grid.Column="1"
                                                                               Text="{Binding}"
                                                                               Style="{StaticResource ProjectTechTextStyle}" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                        </ScrollViewer>
                    </DataTemplate>
                </utu:ResponsiveView.NarrowTemplate>

                <!-- Desktop Layout (Normal/Wide) -->
                <utu:ResponsiveView.NormalTemplate>
                    <DataTemplate>
                        <ScrollViewer Background="#FFFFFF" Padding="24,24">
                        <ItemsRepeater ItemsSource="{Binding Projects}">
                            <ItemsRepeater.Layout>
                                <StackLayout Spacing="0" />
                            </ItemsRepeater.Layout>
                            <ItemsRepeater.ItemTemplate>
                                <DataTemplate x:DataType="local:ProjectDetailModel">
                                    <Border Background="#FFFFFF"
                                            BorderBrush="#000000"
                                            BorderThickness="2"
                                            MaxWidth="900"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,0,32">

                                        <StackPanel>
                                            <!-- Project Header -->
                                            <Border Background="#000000"
                                                    Padding="24,16">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Name}"
                                                                   Style="{StaticResource ProjectHeaderStyle}"
                                                                   FontSize="28" />
                                                        <TextBlock Text="{Binding Framework}"
                                                                   Style="{StaticResource ProjectFrameworkStyle}"
                                                                   FontSize="12"
                                                                   Margin="0,6,0,0" />
                                                    </StackPanel>

                                                    <!-- Store Links -->
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                                        <Button Style="{StaticResource IconButtonStyle}"
                                                                Background="Transparent"
                                                                Visibility="{Binding AppStoreUrl, Converter={StaticResource NullToCollapsedConverter}}"
                                                                CommandParameter="{Binding AppStoreUrl}">
                                                            <FontIcon Glyph="&#xE8A1;" FontSize="20" Foreground="#FFFFFF" />
                                                        </Button>
                                                        <Button Style="{StaticResource IconButtonStyle}"
                                                                Background="Transparent"
                                                                Visibility="{Binding PlayStoreUrl, Converter={StaticResource NullToCollapsedConverter}}"
                                                                CommandParameter="{Binding PlayStoreUrl}">
                                                            <FontIcon Glyph="&#xE7FC;" FontSize="20" Foreground="#FFFFFF" />
                                                        </Button>
                                                        <Button Style="{StaticResource IconButtonStyle}"
                                                                Background="Transparent"
                                                                Visibility="{Binding WebsiteUrl, Converter={StaticResource NullToCollapsedConverter}}"
                                                                CommandParameter="{Binding WebsiteUrl}">
                                                            <FontIcon Glyph="&#xE774;" FontSize="20" Foreground="#FFFFFF" />
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>

                                            <!-- Two Column Layout for Desktop -->
                                            <Grid Padding="24">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="24" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Functions Column -->
                                                <StackPanel Spacing="12">
                                                    <Border BorderBrush="#000000"
                                                            BorderThickness="0,0,0,2"
                                                            Padding="0,0,0,8">
                                                        <TextBlock Text="FUNKTIONEN"
                                                                   Style="{StaticResource ProjectSectionTitleStyle}" />
                                                    </Border>

                                                    <ItemsRepeater ItemsSource="{Binding Functions}">
                                                        <ItemsRepeater.Layout>
                                                            <StackLayout Spacing="8" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid ColumnSpacing="12">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Width="6" Height="6"
                                                                            Background="#000000"
                                                                            VerticalAlignment="Top"
                                                                            Margin="0,7,0,0" />
                                                                    <TextBlock Grid.Column="1"
                                                                               Text="{Binding}"
                                                                               Style="{StaticResource ProjectItemTextStyle}"
                                                                               FontSize="14" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>
                                                </StackPanel>

                                                <!-- Vertical Divider -->
                                                <Border Grid.Column="1"
                                                        Width="1"
                                                        Background="#E5E5E5"
                                                        HorizontalAlignment="Center" />

                                                <!-- Technical Aspects Column -->
                                                <StackPanel Grid.Column="2" Spacing="12">
                                                    <Border BorderBrush="#000000"
                                                            BorderThickness="0,0,0,2"
                                                            Padding="0,0,0,8">
                                                        <TextBlock Text="TECHNISCHE ASPEKTE"
                                                                   Style="{StaticResource ProjectSectionTitleStyle}" />
                                                    </Border>

                                                    <ItemsRepeater ItemsSource="{Binding TechnicalAspects}">
                                                        <ItemsRepeater.Layout>
                                                            <StackLayout Spacing="8" />
                                                        </ItemsRepeater.Layout>
                                                        <ItemsRepeater.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid ColumnSpacing="12">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto" />
                                                                        <ColumnDefinition Width="*" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Text="+"
                                                                               Style="{StaticResource ProjectBulletStyle}"
                                                                               FontSize="14"
                                                                               VerticalAlignment="Top" />
                                                                    <TextBlock Grid.Column="1"
                                                                               Text="{Binding}"
                                                                               Style="{StaticResource ProjectTechTextStyle}"
                                                                               FontSize="14" />
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsRepeater.ItemTemplate>
                                                    </ItemsRepeater>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsRepeater.ItemTemplate>
                        </ItemsRepeater>
                        </ScrollViewer>
                    </DataTemplate>
                </utu:ResponsiveView.NormalTemplate>
            </utu:ResponsiveView>
        </Grid>

        <!-- Floating PDF Export Button (rendered on top) -->
        <controls:ExportHeaderControl ExportTarget="{x:Bind ProjectsExportArea}"
                                       FileName="Projekte_Daniel_Hufnagl"
                                       Margin="0,16,48,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top" />
    </Grid>
</Page>
