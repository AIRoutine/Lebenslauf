<UserControl x:Class="Lebenslauf.Features.Cv.Presentation.Sections.SkillBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Skill Name and Percentage -->
        <Grid Margin="0,0,0,4">
            <TextBlock x:Name="SkillNameText"
                       Style="{StaticResource CvSkillNameTextBlockStyle}" />
            <TextBlock x:Name="PercentageText"
                       HorizontalAlignment="Right"
                       Style="{StaticResource CvSkillPercentageTextBlockStyle}" />
        </Grid>

        <!-- Progress Bar -->
        <Grid Grid.Row="1" Height="6">
            <!-- Background -->
            <Border Background="{ThemeResource SurfaceVariantBrush}"
                    CornerRadius="3" />

            <!-- Fill -->
            <Border x:Name="FillBar"
                    CornerRadius="3"
                    HorizontalAlignment="Left"
                    Background="{ThemeResource AccentBrush}" />
        </Grid>
    </Grid>
</UserControl>
