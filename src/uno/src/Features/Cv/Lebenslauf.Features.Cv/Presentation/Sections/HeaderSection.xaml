<UserControl x:Class="Lebenslauf.Features.Cv.Presentation.Sections.HeaderSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utu="using:Uno.Toolkit.UI">

    <!-- Hero Header with Gradient Background -->
    <Border CornerRadius="16"
            Padding="32"
            Style="{StaticResource CardBorderStyle}">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a237e" Offset="0.0" />
                <GradientStop Color="#0d47a1" Offset="0.5" />
                <GradientStop Color="#01579b" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Profile Avatar -->
            <Border Width="120" Height="120"
                    CornerRadius="60"
                    BorderBrush="White"
                    BorderThickness="3"
                    Style="{StaticResource CardBorderStyle}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#42a5f5" Offset="0.0" />
                        <GradientStop Color="#1976d2" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <FontIcon Glyph="&#xE77B;"
                          FontSize="56"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center" />
            </Border>

            <!-- Contact Info -->
            <StackPanel Grid.Column="1"
                        Margin="32,0,0,0"
                        VerticalAlignment="Center"
                        Spacing="8">

                <!-- Name -->
                <TextBlock Text="{Binding Name}"
                           Style="{StaticResource HeadlineLargeTextBlockStyle}"
                           Foreground="White"
                           FontWeight="Bold" />

                <!-- Title/Role -->
                <TextBlock Text="Senior Cross-Platform Developer"
                           Style="{StaticResource TitleMediumTextBlockStyle}"
                           Foreground="#B3E5FC"
                           Margin="0,0,0,12" />

                <!-- Contact Items -->
                <StackPanel Orientation="Horizontal" Spacing="24">

                    <!-- Location -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE81D;" FontSize="16" Foreground="#90CAF9" />
                        <TextBlock Style="{StaticResource BodyMediumTextBlockStyle}" Foreground="#E3F2FD">
                            <Run Text="{Binding City}" /><Run Text=", " /><Run Text="{Binding Country}" />
                        </TextBlock>
                    </StackPanel>

                    <!-- Phone -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE717;" FontSize="16" Foreground="#90CAF9" />
                        <TextBlock Text="{Binding Phone}"
                                   Style="{StaticResource BodyMediumTextBlockStyle}"
                                   Foreground="#E3F2FD" />
                    </StackPanel>

                    <!-- Email -->
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE715;" FontSize="16" Foreground="#90CAF9" />
                        <TextBlock Text="{Binding Email}"
                                   Style="{StaticResource BodyMediumTextBlockStyle}"
                                   Foreground="White"
                                   FontWeight="SemiBold" />
                    </StackPanel>

                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
